<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/demo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:id="@+id/btnMp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/volume"
                android:background="@android:color/transparent" />


            <TextView
                android:id="@+id/txtWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="beautiful (adj)"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtPronounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="['bju:tiful]"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtMean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đẹp, hay, tốt"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="She is beautiful"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="1dp"
        android:background="@android:color/holo_red_dark" />

</LinearLayout>
